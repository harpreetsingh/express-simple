extends layout 

block content
    h1 #{title}
    .container 
        form(action="/contact/send-email" method="POST")
            .form-group
                label(for="name") Name:
                input.form-control(type="text" id="name" name="name" required)

            .form-group
                label(for="email") Email:
                input.form-control(type="email" id="email" name="email" required)
            
            
            .form-group
                label(for="message") Message:
                textarea.form-control(id="message" name="message" required)

            .form-group
                button.btn.btn-primary(type="submit") Send Message  